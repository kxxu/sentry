<Configuration name="HiveLog4j2" status="info" packages="org.apache.hadoop.hive.ql.log,org.apache.sentry.log.handler">
    <properties>
        <property name="hive.log.level">INFO</property>
        <property name="hive.root.logger">DRFA</property>
        <property name="hive.log.dir">/var/log/hive</property>
        <property name="hive.log.file">hive.log</property>
        <!--<property></property>-->
    </properties>
    <Appenders>
        <Console name="Console" target="SYSTEM_ERR">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
        <RollingFile name="DRFA" fileName="${sys:hive.log.dir}/${sys:hive.log.file}" filePattern="${sys:hive.log.dir}/${sys:hive.log.file}.%d{yyyy-MM-dd}">
            <PatternLayout>
                <pattern>%d{ISO8601} %-5p [%t]: %c{2} (%F:%M(%L)) - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
        <RollingFile name="sentry" fileName="${sys:hive.log.dir}/sentry.log" filePattern="${sys:hive.log.dir}/sentry.%d{yyyy-MM-dd}">
            <PatternLayout>
                <pattern>%d{ISO8601} %-5p [%t]: %c{2} (%F:%M(%L)) - %m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
        <RollingFile name="audit" fileName="${sys:hive.log.dir}/hive-audit.log" filePattern="${sys:hive.log.dir}/hive-audit.%d{yyyy-MM-dd}">
            <PatternLayout>
                <pattern>%d{ISO8601}|%m%n</pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1" modulate="true"/>
            </Policies>
            <DefaultRolloverStrategy max="30"/>
        </RollingFile>
        <JDBCTable name="jdbc" tableName="filebrowser_hive_table" ignoreExceptions="true">
            <ColumnDesc name="table_name" property="tableName"/>
            <ColumnDesc name="project" property="project"/>
            <ColumnDesc name="project_owner" property="createUser"/>
            <ColumnDesc name="created_time" property="createdTime" handler="org.apache.sentry.log.handler.DateTypeHandler"/>
            <ColumnDesc name="table_description" property="tableDescription"/>
        </JDBCTable>
    </Appenders>

    <Loggers>
        <Root level="${sys:hive.log.level}">
            <AppenderRef ref="${sys:hive.root.logger}"/>
        </Root>
        <Logger name="org.apache.zookeeper.server.NIOServerCnxn" level="WARN" />
        <Logger name="org.apache.zookeeper.ClientCnxnSocketNIO" level="WARN" />
        <Logger name="DataNucleus" level="ERROR" />
        <Logger name="Datastore" level="ERROR" />
        <Logger name="JPOX" level="ERROR"/>

        <Logger name="org.apache.sentry" level="DEBUG">
            <AppenderRef ref="sentry" />
        </Logger>
        <Logger name="audit" level="INFO">
            <AppenderRef ref="audit" />
        </Logger>
        <Logger name="hiveJdbc" level="INFO">
            <AppenderRef ref="jdbc" />
        </Logger>

    </Loggers>


</Configuration>